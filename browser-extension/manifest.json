{
  "manifest_version": 3,
  "name": "AI Governance Monitor",
  "version": "1.0.0",
  "description": "Enterprise AI usage monitoring and governance - tracks prompts, detects PII, and improves prompt quality with Auth0 authentication",
  "permissions": [
    "storage",
    "activeTab",
    "identity",
    "tabs"
  ],
  "host_permissions": [
    "https://chat.openai.com/*",
    "https://chatgpt.com/*",
    "https://claude.ai/*",
    "https://gemini.google.com/*",
    "https://copilot.microsoft.com/*",
    "http://localhost:8000/*",
    "https://dev-y75lecimhanaeqy7.us.auth0.com/*",
    "https://*.ngrok-free.dev/*",
    "https://sunshineless-beckett-axial.ngrok-free.dev/*"
  ],
  "background": {
    "service_worker": "src/background/service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://chatgpt.com/*"
      ],
      "js": [
        "config.js",
        "src/shared/pii-detector.js",
        "src/shared/api-client.js",
        "src/shared/variant-modal.js",
        "src/shared/content-core.js",
        "src/content/chatgpt.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://claude.ai/*"
      ],
      "js": [
        "config.js",
        "src/shared/pii-detector.js",
        "src/shared/api-client.js",
        "src/shared/variant-modal.js",
        "src/shared/content-core.js",
        "src/content/claude.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://gemini.google.com/*"
      ],
      "js": [
        "config.js",
        "src/shared/pii-detector.js",
        "src/shared/api-client.js",
        "src/shared/variant-modal.js",
        "src/shared/content-core.js",
        "src/content/gemini.js"
      ],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://copilot.microsoft.com/*"
      ],
      "js": [
        "config.js",
        "src/shared/pii-detector.js",
        "src/shared/api-client.js",
        "src/shared/variant-modal.js",
        "src/shared/content-core.js",
        "src/content/copilot.js"
      ],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "src/popup/popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}